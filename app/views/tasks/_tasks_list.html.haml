#list_title.page-header
  %button.btn.btn-small.pull-right{"data-target" => "#new_task", "data-toggle" => "modal", type: "button"} New Task
  %h2
    =@list.name

#tasks_list
  %table#tasks.table.table-hover
    %tbody
      = render @tasks
-#form for new task
#new_task.modal.hide.fade{role: "dialog", tabindex: "-1"}
  = simple_form_for [@list, @list.tasks.build], remote: true, html: {'style' => 'margin: 0'} do |f|
    .modal-header
      %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", type: "button"} Ã—
      %h3#myModalLabel New Task
    .modal-body
      = f.input :text
    .modal-footer
      %button.btn.btn-small{"aria-hidden" => "true", 'type' => 'button', "data-dismiss" => "modal"} Close
      = f.button :submit, class: 'btn-info'

-#form for edit task
#update_task.modal.hide.fade{:role => "dialog", :tabindex => "-1"}
  .modal-header
    %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} Ã—
    %h3#myModalLabel Modal header
  .modal-body
    Remind me
    = simple_form_for([@list, @list.tasks.build],remote: true) do |f|
      #accordion2.accordion
        .accordion-group
          .accordion-heading
            %label.checkbox
              %input{:type => "checkbox",id: "by-date","data-target" => "#collapse-by-date", "data-toggle" => "collapse"}
                by date
          #collapse-by-date.accordion-body.collapse
            .accordion-inner
              = f.text_field :date, :id => "datepicker"

        .accordion-group
          .accordion-heading
            %label.checkbox
              %input{:type => "checkbox",id: "by-location","data-target" => "#collapse-by-location", "data-toggle" => "collapse"}
                by location
          #collapse-by-location.accordion-body.collapse
            .accordion-inner
              = f.input :address
      .modal-footer
        %button.btn{"aria-hidden" => "true", "data-dismiss" => "modal"} Close
        =f.button :submit, "Save Changes",{class: "task btn btn-primary","data-remote" => "true"} 