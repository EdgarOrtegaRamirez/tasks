#list_title.page-header
  %a.btn.btn-success.pull-right#new_task_button{'data-action' => "#{new_list_task_path @list}", 'data-toggle' => "modal"}
    New Task
  %h2
    =@list.name

#tasks_list
  %ul#tasks.unstyled
    -@tasks.each do |task|
      %li.task{id: "task_#{task.id}"}
        =render task
