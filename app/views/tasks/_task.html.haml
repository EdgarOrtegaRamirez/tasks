%li.task{id: "task_#{task.id}"}
  .row-fluid
    = simple_form_for([@list, task], remote: true, html: {style: 'margin:0'}) do |f|
      .span9
        = f.input :completed, label: false, wrapper: :inline_checkbox, inline_label: task.text
        %p.muted.pull-right.task_meta
          %small
            = task.address
            = task.date.strftime("| %d/%b/%Y %I:%M %P") unless task.date.nil?
        
    .span2
      .task_actions.btn-group
        %button{class: "btn btn-info btn-small edit_task_button", "data-toggle" => "modal", "data-action" => "#{edit_list_task_path(@list, task)}"} Edit

        = link_to "Delete", list_task_path(@list, task), method: :delete, data: {confirm: "Are you sure?"}, remote: true, class: 'btn btn-small'
